    <style>
        .header{
    height: 100px;
    background-color: #557571;
    width: 100%;
}
.heading1{
    text-decoration: none;
    margin-left: 10px;
    font-family: 'Playfair Display', serif;
    color: #F4F4F4;
}

.button {
  background-color: #c2fbd7;
  border-radius: 100px;
  box-shadow: rgba(44, 187, 99, .2) 0 -25px 18px -14px inset,rgba(44, 187, 99, .15) 0 1px 2px,rgba(44, 187, 99, .15) 0 2px 4px,rgba(44, 187, 99, .15) 0 4px 8px,rgba(44, 187, 99, .15) 0 8px 16px,rgba(44, 187, 99, .15) 0 16px 32px;
  color: green;
  cursor: pointer;
  font-family: CerebriSans-Regular,-apple-system,system-ui,Roboto,sans-serif;
  padding: 7px 20px;
  text-align: center;
  text-decoration: none;
  float: right;
  transition: all 250ms;
  border: 0;
  font-size: 16px;
  -webkit-user-select: none;
  user-select: none;
  touch-action: manipulation;
}

.button:hover {
  box-shadow: rgba(44,187,99,.35) 0 -25px 18px -14px inset,rgba(44,187,99,.25) 0 1px 2px,rgba(44,187,99,.25) 0 2px 4px,rgba(44,187,99,.25) 0 4px 8px,rgba(44,187,99,.25) 0 8px 16px,rgba(44,187,99,.25) 0 16px 32px;
  transform: scale(1.05) rotate(-1deg);
}
#photo{
    margin-left: 110px;
}
    </style>
    <script src="/js/p.js"></script>
</head>
<body style="background-color: #E1EEDD;" onload="myFunction();">
    <div class="navbar header">
            <a style="text-decoration:none;" href="#"><h2 class="heading1">HomeAway</h2></a>
    </div>
    
    <%Hostinfo.forEach((Hostie)=>{ %>
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4" style="margin-left: -50px; margin-right: 30px;">
                <div class="card mb-4" style="border-radius: 30px; box-shadow: 20px;box-shadow: 5px 10px 8px 1px #888888;">
